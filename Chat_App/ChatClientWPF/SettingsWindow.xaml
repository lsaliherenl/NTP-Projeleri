<Window x:Class="ChatClientWPF.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ayarlar" Height="300" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" Background="#0f1115" Foreground="#e5e7eb">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#2563eb"/>
        <SolidColorBrush x:Key="PrimaryBlueDark" Color="#1d4ed8"/>
        <SolidColorBrush x:Key="PanelBorder" Color="#2a2f3a"/>
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryBlueDark}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Profil" FontWeight="Bold" Margin="0,0,0,6" Foreground="#e5e7eb"/>
            <TextBlock Text="Kullanıcı Adı:" Foreground="#e5e7eb"/>
            <TextBox Name="UserNameTextBox" Height="28" Margin="0,4,0,10" Background="#181b23" BorderBrush="{StaticResource PanelBorder}" Foreground="#e5e7eb"/>

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Profil Fotoğrafı:" VerticalAlignment="Center" Foreground="#e5e7eb"/>
                <TextBlock Name="ImagePathText" Grid.Column="1" Margin="8,0,8,0" VerticalAlignment="Center" Opacity="0.8" Foreground="#e5e7eb"/>
                <Button Grid.Column="2" Content="Resim Seç" Width="100" Click="PickImage_Click"/>
            </Grid>

            <Separator/>
            <TextBlock Text="Sunucu" FontWeight="Bold" Margin="0,10,0,6" Foreground="#e5e7eb"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Host:" VerticalAlignment="Center" Foreground="#e5e7eb"/>
                <TextBox Name="HostTextBox" Grid.Column="1" Height="28" Margin="6,0,12,0" Background="#181b23" BorderBrush="{StaticResource PanelBorder}" Foreground="#e5e7eb"/>
                <TextBlock Grid.Column="2" Text="Port:" VerticalAlignment="Center" Foreground="#e5e7eb"/>
                <TextBox Name="PortTextBox" Grid.Column="3" Height="28" Background="#181b23" BorderBrush="{StaticResource PanelBorder}" Foreground="#e5e7eb"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="İptal" Width="90" Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button Content="Kaydet" Width="90" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>

