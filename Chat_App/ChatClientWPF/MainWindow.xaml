<Window x:Class="ChatClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Uygulaması" Height="500" Width="800"
        ResizeMode="CanMinimize" Background="#0f1115" Foreground="#e5e7eb">
    <Window.Resources>
        <!-- Renkler -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#2563eb"/>
        <SolidColorBrush x:Key="PrimaryBlueDark" Color="#1d4ed8"/>
        <SolidColorBrush x:Key="PanelBorder" Color="#2a2f3a"/>
        <SolidColorBrush x:Key="PanelBg" Color="#111318"/>
        <SolidColorBrush x:Key="TextLight" Color="#e5e7eb"/>
        <SolidColorBrush x:Key="TextMuted" Color="#cbd5e1"/>

        <!-- Buton Stili -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryBlueDark}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Mesaj ItemTemplate: balon + fade-in -->
        <DataTemplate x:Key="MessageItemTemplate">
            <Grid Margin="0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- Sol hizalı (başkaları) -->
                <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="10" MaxWidth="420" BorderBrush="#e5e7eb" BorderThickness="1">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Setter Property="Opacity" Value="0"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSelf}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="{Binding Text}" Foreground="#111" TextWrapping="Wrap"/>
                </Border>
                <!-- Sağ hizalı (kendim) -->
                <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="10" MaxWidth="420" HorizontalAlignment="Right" BorderBrush="{StaticResource PrimaryBlue}" BorderThickness="2">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Setter Property="Opacity" Value="0"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSelf}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="{Binding Text}" Foreground="#111" TextWrapping="Wrap"/>
                </Border>
            </Grid>
        </DataTemplate>

        <!-- Kullanıcı ItemTemplate -->
        <DataTemplate x:Key="UserItemTemplate">
            <StackPanel Orientation="Horizontal" Margin="4" VerticalAlignment="Center">
                <Grid Width="28" Height="28">
                    <Ellipse Fill="#1f2937" Stroke="{StaticResource PanelBorder}" StrokeThickness="1"/>
                    <!-- Çevrimiçi göstergesi -->
                    <Ellipse Width="8" Height="8" Fill="#10b981" Stroke="#052e1b" StrokeThickness="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,1,1"/>
                    <Image Source="{Binding Avatar}" Stretch="UniformToFill" ClipToBounds="True"/>
                </Grid>
                <TextBlock Text="{Binding Name}" Margin="8,0,0,0" VerticalAlignment="Center" Foreground="{StaticResource TextLight}"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Üst: Ayarlar düğmesi ve açılır ayarlar paneli -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                <Button Name="settingsToggleButton" Content="Ayarlar" Width="90" Height="28" Click="SettingsToggleButton_Click"/>
                </StackPanel>
                <TextBlock Name="statusText" Grid.Column="1" Text="Bağlı değil" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{StaticResource TextMuted}"/>
            </Grid>
            <Border Name="settingsPanel" Grid.Row="1" Visibility="Collapsed" Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,8,0,0">
                <StackPanel>
                    <TextBlock Text="Kullanıcı Adı:" FontWeight="Bold"/>
                    <TextBox Name="settingsUserNameBox" Height="28" Margin="0,4,0,8"/>

                    <TextBlock Text="Sunucuya Bağlan" FontWeight="Bold" Margin="0,8,0,4"/>
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Host:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBox Name="settingsHostBox" Grid.Column="1" Height="28" Text="127.0.0.1"/>
                        <TextBlock Grid.Column="2" Text="Port:" VerticalAlignment="Center" Margin="12,0,6,0"/>
                        <TextBox Name="settingsPortBox" Grid.Column="3" Height="28" Text="5000"/>
                        <Button Name="settingsConnectButton" Grid.Column="4" Content="Bağlan" Width="90" Height="28" Margin="12,0,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Sol: Kullanıcı Listesi -->
        <Border Grid.Row="1" Grid.Column="0" Margin="0,0,10,0" BorderBrush="{StaticResource PanelBorder}" Background="{StaticResource PanelBg}" BorderThickness="1" CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Kullanıcılar" FontWeight="Bold" FontSize="14" Margin="8"/>
                <ListBox Grid.Row="1" Name="usersList" Margin="8,0,8,8" Background="Transparent" BorderThickness="0" ItemTemplate="{StaticResource UserItemTemplate}"/>
            </Grid>
        </Border>

        <!-- Orta: Mesaj Listesi -->
        <Border Grid.Row="1" Grid.Column="1" BorderBrush="{StaticResource PanelBorder}" Background="{StaticResource PanelBg}" BorderThickness="1" CornerRadius="8">
            <ListBox Name="messagesList" Margin="8" Background="Transparent" BorderThickness="0" ItemTemplate="{StaticResource MessageItemTemplate}"/>
        </Border>

        <!-- Alt: Mesaj Gönderme Alanı (sadece orta sütun) -->
        <Grid Grid.Row="2" Grid.Column="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Name="messageBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,0,5,0" PreviewKeyDown="MessageBox_PreviewKeyDown" IsEnabled="False" Background="#181b23" BorderBrush="{StaticResource PanelBorder}" Foreground="{StaticResource TextLight}"/>
            <Button Grid.Column="1" Name="sendButton" Content="Gönder" Width="90" Click="SendMessage" IsEnabled="False"/>
        </Grid>
    </Grid>
</Window>
